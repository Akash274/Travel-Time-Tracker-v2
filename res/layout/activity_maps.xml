 <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.akash.android.traveltimetracker.MapsActivity" >


        <android.support.design.widget.CoordinatorLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            tools:context="com.akash.android.traveltimetracker.MapsActivity">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_map_option_busTracker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginBottom="205dp"
                android:src="@drawable/ic_directions_bus_white_24dp"
                android:elevation="6dp"
                app:pressedTranslationZ="12dp"
                android:visibility="invisible"
                android:contentDescription="Traffic"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_map_option_traffic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginBottom="140dp"
                android:src="@drawable/ic_traffic_white_24dp"
                android:elevation="6dp"
                app:pressedTranslationZ="12dp"
                android:visibility="invisible"
                android:contentDescription="Traffic"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_map_option_my_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginBottom="75dp"
                android:src="@drawable/ic_my_location_white_24dp"
                android:elevation="6dp"
                app:pressedTranslationZ="12dp"
                android:visibility="invisible"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_map_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="@dimen/fab_margin"
                android:src="@drawable/ic_add_white_24dp"
                android:elevation="6dp"
                app:pressedTranslationZ="12dp"
                android:layout_marginBottom="10dp"
                />

        </android.support.design.widget.CoordinatorLayout>

    </fragment>